@using Gardener.Base;
@using Gardener.Base.Resources;
<Tag Color="@(Yes?"blue":"red")">
    @(Yes ? localizer[SharedLocalResource.Yes] : localizer[SharedLocalResource.No])
</Tag>
@code {
    [Inject]
    protected IClientLocalizer localizer { get; set; }
    [Parameter]
    public bool Yes { get; set; }
}
