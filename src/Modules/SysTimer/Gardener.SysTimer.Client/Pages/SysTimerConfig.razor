@page "/system_manager/systimer"
@inherits TableBase<SysTimerDto, int, SysTimerEdit>

<div>
    <Table @ref="_table"
           TItem="SysTimerDto"
           DataSource="@_datas"
           Total="_total"
           OnChange="@OnChange"
           @bind-PageIndex="_pageIndex"
           @bind-PageSize="_pageSize"
           @bind-SelectedRows="_selectedRows"
           Loading="@_tableIsLoading"
           Context="model">
        <TitleTemplate>
            <ResourceAuthorize ResourceKey="system_manager_timer_refresh">
                <TableSearch TDto="SysTimerDto" OnSearchFieldChanged="SetPresetFilterGroups" OnSearch="()=>ReLoadTable(true)" DefaultValue="_defaultSearchValue"></TableSearch>
            </ResourceAuthorize>
            <Row>
                <AntDesign.Col Span="8">
                    <ResourceAuthorize ResourceKey="system_manager_timer_delete_selected">
                        <Button Type="@ButtonType.Primary" Icon="delete" Danger OnClick="OnClickDeletes" Loading="_deletesBtnLoading">
                            @localizer["删除选中"]
                        </Button>
                    </ResourceAuthorize>
                </AntDesign.Col>
                <AntDesign.Col Span="16" Style="text-align:right">
                    <Space>
                        <ResourceAuthorize ResourceKey="system_manager_timer_add">
                            <SpaceItem>
                                <Button Type="@ButtonType.Primary" Icon="plus" OnClick="OnClickAdd">
                                    @localizer["添加"]
                                </Button>
                            </SpaceItem>
                        </ResourceAuthorize>
                        <ResourceAuthorize ResourceKey="system_manager_timer_refresh">
                            <SpaceItem>
                                <Button Type="@ButtonType.Primary" Icon="reload" OnClick="ReLoadTable">
                                    @localizer["刷新"]
                                </Button>
                            </SpaceItem>
                        </ResourceAuthorize>
                    </Space>
                </AntDesign.Col>
            </Row>
        </TitleTemplate>
        <RowTemplate>
            <ResourceAuthorize ResourceKey="system_manager_timer_delete_selected">
                <Selection Key="@(model.Id.ToString())" />
            </ResourceAuthorize>
            <Column @bind-Field="@model.JobName" Filterable />
            <Column @bind-Field="@model.ExecuteType" Width="10%" Filters="FunctionRequestTypeFilters">
                <TagRandomColor Text="@EnumHelper.GetEnumDescription(model.ExecuteType)"></TagRandomColor>
            </Column>
            <Column Title="执行内容" TData="string">
                @if (ExecuteType.LOCAL.Equals(model.ExecuteType))
                {
                    <span>@model.LocalMethod</span>
                }
                else if (ExecuteType.HTTP.Equals(model.ExecuteType))
                {
                    <span>@EnumHelper.GetEnumDescription(model.HttpMethod)</span>
                    <br />
                    <span>@model.RequestUrl</span>
                    <br />
                    <span>@model.RequestParameters</span>
                    <br />
                    <span>@model.Headers</span>
                }
            </Column>
            <Column @bind-Field="@model.Interval" Filterable />
            <Column @bind-Field="@model.TimerStatus" Width="10%">
                <TagRandomColor Text="@EnumHelper.GetEnumDescription(model.TimerStatus)"></TagRandomColor>
            </Column>
            <Column @bind-Field="@model.RunNumber" Filterable />
            <Column @bind-Field="@model.Remark" Filterable />
            <Column @bind-Field="@model.StartNow" Filterable>
                <ResourceAuthorize ResourceKey="system_manager_timer_start">
                    <Authorized>
                        @if (!TimerStatus.Running.Equals(model.TimerStatus))
                        {
                            <Tooltip Title="@(localizer["开启"])" ArrowPointAtCenter="true">
                                <Button Icon="play-circle" Type="@ButtonType.Primary" Shape="@ButtonShape.Circle" Size="@ClientConstant.OperationButtonSize" OnClick="()=>OnStartExecute(model)"></Button>
                            </Tooltip>
                        }
                    </Authorized>
                </ResourceAuthorize>

                <ResourceAuthorize ResourceKey="system_manager_timer_stop">
                    <Authorized>
                        @if (TimerStatus.Running.Equals(model.TimerStatus))
                        {
                            <Tooltip Title="@(localizer["关闭"])" ArrowPointAtCenter="true">
                                <Button Icon="pause-circle" Danger Type="@ButtonType.Primary" Shape="@ButtonShape.Circle" Size="@ClientConstant.OperationButtonSize" OnClick="()=>OnStartExecute(model)"></Button>
                            </Tooltip>
                        }
                    </Authorized>
                </ResourceAuthorize>
            </Column>
            <Column @bind-Field="@model.CreatedTime" Format="@ClientConstant.DateTimeFormat" Sortable DefaultSortOrder="@SortDirection.Descending" />
            <ActionColumn>
                <Space>
                    <ResourceAuthorize ResourceKey="system_manager_timer_edit">
                        <SpaceItem>
                            <Tooltip Title="@(localizer["编辑"])" ArrowPointAtCenter="true">
                                <Button Icon="edit" Type="@ButtonType.Primary" Size="@ClientConstant.OperationButtonSize" OnClick="()=>OnClickEdit(model.Id)"></Button>
                            </Tooltip>
                        </SpaceItem>
                    </ResourceAuthorize>
                    <ResourceAuthorize ResourceKey="system_manager_timer_detail">
                        <SpaceItem>
                            <Tooltip Title="@(localizer["详情"])" ArrowPointAtCenter="true">
                                <Button Icon="eye" Type="@ButtonType.Primary" Size="@ClientConstant.OperationButtonSize" OnClick="()=>OnClickDetail(model.Id)"></Button>
                            </Tooltip>
                        </SpaceItem>
                    </ResourceAuthorize>
                    <ResourceAuthorize ResourceKey="system_manager_timer_delete">
                        <SpaceItem>
                            <Tooltip Title="@(localizer["删除"])" ArrowPointAtCenter="true">
                                <Button Icon="delete" Type="@ButtonType.Primary" Danger OnClick="()=>OnClickDelete(model.Id)"></Button>
                            </Tooltip>
                        </SpaceItem>
                    </ResourceAuthorize>
                </Space>
            </ActionColumn>
        </RowTemplate>
    </Table>
</div>
